mixin dropdownroom(name='Dropdownn', selected='спальни, кровати...')
    .dropdown
        .dropdown-header 
            .dropdown-header__text=name
        .dropdown-drop(onclick="drop()" id="border")
            .dropdown-drop__main=main 
            .dropdown-drop__icon
                .dropdown-drop__selected=selected
                img(src="/src/images/expandmore.svg", alt="Drop")
    .list 
        +ddrlist 
    script 
        include ../../js/dropdownfunction.js
        include ../../js/open.js

mixin dropdownpeople(name='Dropdownn', selected='Сколько гостей')
    .dropdownp
        .dropdownp-header 
            .dropdownp-header__text=name
        .dropdownp-drop(onclick="peopleopen()" id="borderpeople")
            .dropdownp-drop__main=main 
            .dropdownp-drop__icon
                .dropdownp-drop__selected=selected
                img(src="/src/images/expandmore.svg", alt="Drop")
    .list 
        +ddplist 
    script 
        include ../../js/dropdownfunction.js
        include ../../js/open.js
    




mixin ddrlist(item1='спальни', item2='кровати', item3='ванные комнаты', i=0)
    .ddr(id='dropmenu')
        .ddr-item 
            .ddr-item__text=item1
            .ddr-item__score 
                +minus('-')
                .ddr-item__scoretxt(id="test")=i
                +plus('+')
        .ddr-item 
            .ddr-item__text=item2
            .ddr-item__score 
                +minus('-')(id="minus")
                .ddr-item__scoretxt=i
                +plus('+')
        .ddr-item 
            .ddr-item__text=item3
            .ddr-item__score 
                +minus('-')
                .ddr-item__scoretxt=i
                +plus('+')

